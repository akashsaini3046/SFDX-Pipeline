<?xml version="1.0" encoding="UTF-8" ?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Proposed_Account_Owner__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_time_when_step_1_is_approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>PreviousOwnersManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula
      >AND(NOT(ISBLANK(PreviousOwnersManager__c )),  userWhoProposedNewOwner__c !=  PreviousOwnersManager__c )</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval request to Current Owner&apos;s Manager</label>
        <name>Send_Approval_request_to_Old_Manager</name>
        <rejectionActions>
            <action>
                <name
        >Notification_of_Account_Owner_Change_REJECTION_to_user_who_proposed_it</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_time_when_step_2_is_approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Proposed_Owners_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula
      >AND( NOT(ISBLANK(Proposed_Owners_Manager__c)),  userWhoProposedNewOwner__c !=  Proposed_Owners_Manager__c,  PreviousOwnersManager__c !=  Proposed_Owners_Manager__c)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval request to Proposed Owner&apos;s Manager</label>
        <name>Send_Approval_Request_to_New_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name
        >Notification_of_Acc_Owner_Change_REJECTION_to_Current_Owner_s_Mgr_at_Step_2</name>
                <type>Alert</type>
            </action>
            <action>
                <name
        >Notification_of_Account_Owner_Change_REJECTION_to_user_who_proposed_it</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_time_when_step_3_is_approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Approval_Process_Action_APPROVED</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>justin.gibson@crowley.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>karben.mejia@crowley.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lilly.berrios@crowley.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>marta.antonelli@crowley.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rebecca.cobb@crowley.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>shelrinda.waters@crowley.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tishlee.rivera@crowley.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tricia.williams@crowley.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Send Approval Request to Mkt Team</label>
        <name>Send_Approval_Request_to_Mkt_Team</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name
        >Notification_of_Acc_Owner_Change_REJECTION_by_Mkt_Team_to_Current_Owner_s_Mgr</name>
                <type>Alert</type>
            </action>
            <action>
                <name
        >Notification_of_Acc_Owner_Change_REJECTION_by_Mkt_Team_to_Proposed_Owner_s_Mgr</name>
                <type>Alert</type>
            </action>
            <action>
                <name
        >Notification_of_Acc_Owner_Change_REJECTION_by_Mkt_Team_to_user_who_proposed_it</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description
  >When user changes account owner from the visualforce page, it will be send for approval first.</description>
    <emailTemplate
  >Account_Contact_Email_Templates/Approval_request_notification_to_the_approvers</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_Account_Status_to_Unlock</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Process_Action_APPROVED</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Account_Status_to_Unlock</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Process_Action_REJECTED</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_Status_to_Approval_in_Progress</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_time_of_approval_process_start</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Account Owner Change Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Change_Account_Status_to_Unlock</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Process_Action_REJECTED</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
